<UserControl x:Class="TicketZ.MVVM.View.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicketZ.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="White" Padding="10" CornerRadius="15,15,0,0">
        <StackPanel>
            <Border Padding="15,5" CornerRadius="10"  Background="{DynamicResource Red500}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                        Grid.Column="0"
                        FontSize="14"
                        Foreground="White"
                        FontWeight="SemiBold" 
                        Text="{Binding Error, StringFormat='Error: {0}'}"
                        />

                </Grid>
            </Border>
            <TextBlock  Text="Settings"/>
            
        </StackPanel>
    </Border>
</UserControl>
